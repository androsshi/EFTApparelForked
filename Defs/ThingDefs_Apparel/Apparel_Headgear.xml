<?xml version="1.0" encoding="utf-8" ?>
<Defs>

  <!-- === Beanie === -->
  <ThingDef ParentName="ApparelMakeableBase">
    <defName>JDSTarkov_Headwear_Beanie</defName>
    <label>Beanie</label>
    <description>Warm knitted hat, traditionally made for skiers but worn by everyone.</description>
    <graphicData>
      <texPath>Things/Headwear/Beanie/Beanie_UI</texPath>
      <graphicClass>Graphic_Single</graphicClass>
    </graphicData>
    <thingCategories>
      <li>EFTHeadgearVanity</li>
    </thingCategories>
    <costList>
      <Cloth>20</Cloth>
    </costList>
    <statBases>
      <Mass>0.7</Mass>
      <Bulk>1</Bulk>
      <WornBulk>1</WornBulk>
      <WorkToMake>1500</WorkToMake>
      <MaxHitPoints>80</MaxHitPoints>
      <ArmorRating_Sharp>0.01</ArmorRating_Sharp>
      <ArmorRating_Blunt>0.01</ArmorRating_Blunt>
      <ArmorRating_Heat>0.12</ArmorRating_Heat>
      <Insulation_Cold>12</Insulation_Cold>
      <EquipDelay>0.8</EquipDelay>
    </statBases>
    <generateCommonality>0.5</generateCommonality>
    <apparel>
      <wornGraphicPath>Things/Headwear/Beanie/Beanie</wornGraphicPath>
      <bodyPartGroups>
        <li>UpperHead</li>
      </bodyPartGroups>
      <layers>
        <li>MiddleHead</li>
      </layers>
      <tags>
        <li>IndustrialBasic</li>
      </tags>
      <defaultOutfitTags>
        <li>Worker</li>
        <li>Soldier</li>
      </defaultOutfitTags>
    </apparel>
  </ThingDef>

